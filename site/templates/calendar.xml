<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_calendar"/>
			</title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section id="calendar">
				<h1><cms:text constant="menu_calendar"/></h1>

				<!-- Google Calendar embed code -->
				<iframe
					src="https://calendar.google.com/calendar/embed?src=yuniexcel%40gmail.com&ctz=Asia/Jerusalem"
					style="border: 0"
					width="800"
					height="600"
					frameborder="0"
					scrolling="no"
					/>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
