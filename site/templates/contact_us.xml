<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_contact_us"/>
			</title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section id="contact">

				<svg>
					<cms:svg file="squiggle.svg"/>
					<cms:svg file="sprite.svg" symbol="icon-envelope"/>
				</svg>

				<!-- background header image -->
				<div class="header-images">
					<cms:desktop>
						<cms:module
							name="gallery"
							action="show_image"
							text_id="contact_us"
							template="parts/header_image.xml"
							>
							<param name="thumbnail_size" value="50"/>
							<param name="class" value="background"/>
						</cms:module>
					</cms:desktop>

					<!-- page image -->
					<cms:module
						name="gallery"
						action="show_image"
						text_id="contact_us"
						template="parts/header_image.xml"
						>
						<param name="thumbnail_size" value="525"/>
						<param name="class" value="thumbnail"/>
					</cms:module>
				</div>

				<h1><cms:text constant="menu_contact_us"/></h1>

				<!-- Additional information -->
				<cms:module
					name="articles"
					action="show"
					text_id="contact_form"
					/>

				<!-- Contact form itself -->
				<cms:module
					name="contact_form"
					action="show"
					text_id="contact-us"
					/>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
