<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control"/>
			<cms:script src="_BASEURL.'/site/scripts/interactive.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<!-- News -->
			<div id="news">
				<div id="controls">
					<a class="previous"></a>
					<p><cms:text constant="site_news"/></p>
					<a class="next"></a>
				</div>

				<cms:module
					name="news"
					action="show_list"
					limit="3"
					order_asc="0"
					template="parts/news_short.xml"
					/>
			</div>

			<!-- Main menu -->
			<cms:template file="parts/main_menu.xml"/>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
