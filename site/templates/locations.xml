<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_locations"/>
			</title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section id="locations">
				<h1><cms:text constant="menu_locations"/></h1>
				<cms:module
					name="articles"
					action="show_group"
					text_id="region-center"
					template="parts/location_group.xml"
					/>
				<cms:module
					name="articles"
					action="show_group"
					text_id="region-sharon"
					template="parts/location_group.xml"
					/>
				<cms:module
					name="articles"
					action="show_group"
					text_id="region-north"
					template="parts/location_group.xml"
					/>
				<cms:module
					name="articles"
					action="show_group"
					text_id="region-south"
					template="parts/location_group.xml"
					/>
				<cms:module
					name="articles"
					action="show_group"
					text_id="region-jerusalem"
					template="parts/location_group.xml"
					/>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
