<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_locations"/>
			</title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section id="locations">
				<!-- matching logo for the page -->
				<img
					src="_BASEURL.'/site/images/'.'location.png'"
					alt="locations"
					class="location"
					cms:eval="src"
					/>

				<!-- header images -->
				<cms:module
					name="gallery"
					action="show_image"
					text_id="location"
					template="parts/header_images_view.xml"
					/>

				<h1><cms:text constant="menu_locations"/></h1>

				<!-- locations groups -->
				<div class="location-group">
					<h3><cms:text constant="region-north"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-north"
						order_by="'title'.$language"
						cms:eval="order_by"
						template="parts/location_info.xml"
						/>
				</div>

				<div class="location-group">
					<h3><cms:text constant="region-south"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-south"
						order_by="'title'.$language"
						cms:eval="order_by"
						template="parts/location_info.xml"
						/>
				</div>

				<div class="location-group">
					<h3><cms:text constant="region-center"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-center"
						order_by="'title'.$language"
						cms:eval="order_by"
						template="parts/location_info.xml"
						/>
				</div>

				<div class="location-group">
					<h3><cms:text constant="region-sharon"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-sharon"
						order_by="'title'.$language"
						cms:eval="order_by"
						template="parts/location_info.xml"
						/>
				</div>

				<div class="location-group">
					<h3><cms:text constant="region-jerusalem"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-jerusalem"
						order_by="'title'.$language"
						cms:eval="order_by"
						template="parts/location_info.xml"
						/>
				</div>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
