<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_locations"/>
			</title>
			<cms:script src="_BASEURL.'/site/scripts/map.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section id="locations">
				<!-- matching logo for the page -->
				<img
					src="_BASEURL.'/site/images/'.'location.png'"
					alt="locations"
					class="location"
					cms:eval="src"
					/>

				<cms:module
					name="gallery"
					action="show_image"
					text_id="location"
					/>

				<h1><cms:text constant="menu_locations"/></h1>
				<figure id="map">
					<cms:svg file="map.svg"/>
					<figcaption>
						<cms:module
							name="articles"
							action="show_list"
							only_visible="1"
							group="locations"
							template="parts/location_info.xml"
							/>
					</figcaption>
				</figure>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
