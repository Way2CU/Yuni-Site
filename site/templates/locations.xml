<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_locations"/>
			</title>
			<cms:script src="_BASEURL.'/site/scripts/map.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section id="locations">
				<!-- matching logo for the page -->
				<img
					src="_BASEURL.'/site/images/'.'location.png'"
					alt="locations"
					class="location"
					cms:eval="src"
					/>

				<!-- background header image -->
				<cms:desktop>
					<cms:module
						name="gallery"
						action="show_image"
						text_id="location"
						template="parts/header_image.xml"
						>
						<param name="thumbnail_size" value="50"/>
						<param name="class" value="background"/>
					</cms:module>
				</cms:desktop>

				<!-- page image -->
				<cms:module
					name="gallery"
					action="show_image"
					text_id="location"
					template="parts/header_image.xml"
					>
					<param name="thumbnail_size" value="600"/>
					<param name="class" value="thumbnail"/>
				</cms:module>

				<h1><cms:text constant="menu_locations"/></h1>

				<!-- locations groups -->
				<div>
					<h3><cms:text constant="region-north"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-north"
						template="parts/location_info.xml"
						/>
				</div>

				<div>
					<h3><cms:text constant="region-south"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-south"
						template="parts/location_info.xml"
						/>
				</div>

				<div>
					<h3><cms:text constant="region-center"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-center"
						template="parts/location_info.xml"
						/>
				</div>

				<div>
					<h3><cms:text constant="region-sharon"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-sharon"
						template="parts/location_info.xml"
						/>
				</div>

				<div>
					<h3><cms:text constant="region-jerusalem"/></h3>
					<cms:module
						name="articles"
						action="show_list"
						group="region-jerusalem"
						template="parts/location_info.xml"
						/>
				</div>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
