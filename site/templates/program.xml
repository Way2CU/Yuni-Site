<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_program"/>
				<cms:raw text=" - "/>
				<cms:module
					name="articles"
					action="show"
					text_id="$_REQUEST['program']"
					group="program"
					template="parts/article_title.xml"
					cms:eval="text_id"
					/>
			</title>

			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section id="program">
				<svg>
					<cms:svg file="squiggle.svg"/>
					<cms:svg file="sprite.svg" symbol="icon-book"/>
				</svg>

				<!-- background header image -->
				<cms:desktop>
					<cms:module
						name="gallery"
						action="show_image"
						text_id="$_REQUEST['program']"
						group="program"
						cms:eval="text_id"
						template="parts/header_image.xml"
						>
						<param name="thumbnail_size" value="50"/>
						<param name="class" value="background"/>
					</cms:module>
				</cms:desktop>

				<!-- page image -->
				<cms:module
					name="gallery"
					action="show_image"
					text_id="$_REQUEST['program']"
					group="program"
					cms:eval="text_id"
					template="parts/header_image.xml"
					>
					<param name="thumbnail_size" value="600"/>
					<param name="class" value="thumbnail"/>
				</cms:module>

				<cms:module
					name="articles"
					action="show"
					text_id="$_REQUEST['program']"
					group="program"
					cms:eval="text_id"
					template="stock/article_generic.xml"
					>
					<param name="class" value=""/>
					<param name="title" value=""/>
					<param name="title_tag" value="h1"/>
				</cms:module>

				<cms:if condition="$_REQUEST['program'] == 'our-team'">
					<div id="our_team_images_holder">
						<cms:desktop>
							<a class="previous" href="javascript:void(0);"></a>
							<cms:module
								name="gallery"
								action="show_image_list"
								group="our-team"
								template="parts/our_team_gallery_item.xml"
								>
								<param name="thumbnail_size" value="250"/>
							</cms:module>
							<a class="next" href="javascript:void(0);"></a>
						</cms:desktop>

						<cms:mobile>
							<cms:module
								name="gallery"
								action="show_image_list"
								group="our-team"
								template="parts/our_team_gallery_item.xml"
								>
								<param name="thumbnail_size" value="160"/>
							</cms:module>
						</cms:mobile>
					</div>
				</cms:if>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
