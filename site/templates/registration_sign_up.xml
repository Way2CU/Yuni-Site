<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_registration_sign_up"/>
			</title>

			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section class="registration">

				<svg>
					<cms:svg file="squiggle.svg"/>
					<cms:svg file="sprite.svg" symbol="icon-diploma"/>
				</svg>

				<!-- Page image -->
				<cms:module
					name="gallery"
					action="show_image"
					text_id="sign_up"
					group="registration"
					/>

				<h1><cms:text constant="menu_registration_sign_up"/></h1>

				<!-- Article for additional information -->
				<cms:module
					name="articles"
					action="show"
					text_id="sign_up"
					group="registration"
					template="stock/article_generic.xml"
					/>

				<nav id="page">
					<a href="https://pay.yuni.co.il/Screens/MainPage.aspx?IsSecure=True">
						<cms:text constant="billing_information_6th_link"/>
					</a>
					<a href="https://pay.yuni.co.il/Screens/MainPage.aspx?IsSecure=True">
						<cms:text constant="billing_information_9th_link"/>
					</a>
					<a href="https://app.tepez.co.il/#/f/550feadef0db8db40697db02/run/">
						<cms:text constant="transition_form_link"/>
					</a>

					<!-- Show dynamically remaining page links -->
					<cms:module
						name="articles"
						action="show_list"
						only_visible="1"
						group="registration-sign-up"
						template="parts/page_menu_item.xml"
						>
						<param name="file" value="registration_sign_up_document.xml"/>
					</cms:module>
				</nav>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
