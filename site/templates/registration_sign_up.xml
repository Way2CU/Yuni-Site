<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_registration_sign_up"/>
			</title>

			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section class="registration">

				<svg>
					<cms:svg file="squiggle.svg"/>
					<cms:svg file="sprite.svg" symbol="icon-diploma"/>
				</svg>

				<!-- background header image -->
				<div class="header-images">
					<cms:desktop>
						<cms:module
							name="gallery"
							action="show_image"
							text_id="sign_up"
							group="registration"
							template="parts/header_image.xml"
							>
							<param name="thumbnail_size" value="50"/>
							<param name="class" value="background"/>
						</cms:module>
					</cms:desktop>

					<!-- page image -->
					<cms:module
						name="gallery"
						action="show_image"
						text_id="sign_up"
						group="registration"
						template="parts/header_image.xml"
						>
						<param name="thumbnail_size" value="525"/>
						<param name="class" value="thumbnail"/>
					</cms:module>
				</div>

				<h1><cms:text constant="menu_registration_sign_up"/></h1>

				<!-- Article for additional information -->
				<cms:module
					name="articles"
					action="show"
					text_id="sign_up"
					group="registration"
					template="stock/article_generic.xml"
					/>

				<nav id="page">
					<!-- external links -->
					<cms:module
						name="articles"
						action="show"
						text_id="external_links"
						template="parts/external_links.xml"
						/>

					<!-- Show dynamically remaining page links -->
					<cms:module
						name="articles"
						action="show_list"
						only_visible="1"
						group="registration-sign-up"
						template="parts/page_menu_item.xml"
						>
						<param name="file" value="registration_sign_up_document.xml"/>
					</cms:module>
				</nav>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
