<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_registration_sign_up"/>
				<cms:raw text=" - "/>
				<cms:module
					name="articles"
					action="show"
					text_id="$_REQUEST['document']"
					group="registration-sign-up"
					template="parts/article_title.xml"
					cms:eval="text_id"
					/>
			</title>
			<cms:module name="head_tag" action="print_tag"/>

			<!-- Canonical item link -->
			<link
				rel="canonical"
				href="URL::make(array('id' => $_REQUEST['document']), 'view_article.xml')"
				cms:eval="href"
				/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section class="registration">
				<svg>
					<cms:svg file="squiggle.svg"/>
					<cms:svg file="sprite.svg" symbol="icon-diploma"/>
				</svg>

				<!-- header images -->
				<cms:module
					name="gallery"
					action="show_image"
					text_id="$_REQUEST['document']"
					group="registration-sign-up"
					cms:eval="text_id"
					template="parts/header_images_view.xml"
					/>

				<!-- default header images -->
				<cms:template file="parts/header_images_view.xml">
					<param name="image" value="sign_up"/>
				</cms:template>

				<cms:module
					name="articles"
					action="show"
					text_id="$_REQUEST['document']"
					group="registration-sign-up"
					cms:eval="text_id"
					template="stock/article_generic.xml"
					>
					<param name="class" value=""/>
					<param name="title" value=""/>
					<param name="title_tag" value="h1"/>
				</cms:module>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
