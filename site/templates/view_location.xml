<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_locations"/>
				<cms:raw text=" - "/>
				<cms:module
					name="articles"
					action="show"
					id="$_REQUEST['id']"
					template="parts/article_title.xml"
					cms:eval="id"
					/>
			</title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Floating menu and title -->
			<cms:template file="parts/header.xml"/>

			<section id="location">

				<!-- matching logo for the page -->
				<img
					src="_BASEURL.'/site/images/'.'location.png'"
					alt="locations"
					class="location"
					cms:eval="src"
					/>

				<!-- background header image -->
				<cms:module
					name="gallery"
					action="show_image"
					text_id="$_REQUEST['id']"
					group="location_headers"
					cms:eval="text_id"
					template="parts/header_image.xml"
					>
					<param name="thumbnail_size" value="70"/>
					<param name="class" value="background"/>
				</cms:module>

				<!-- page image -->
				<cms:module
					name="gallery"
					action="show_image"
					text_id="$_REQUEST['id']"
					group="location_headers"
					cms:eval="text_id"
					template="parts/header_image.xml"
					>
					<param name="thumbnail_size" value="600"/>
					<param name="class" value="thumbnail"/>
				</cms:module>

				<cms:module
					name="articles"
					action="show"
					id="$_REQUEST['id']"
					cms:eval="id"
					/>
			</section>

			<!-- Footer and copyright -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
